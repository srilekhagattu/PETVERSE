<body>
    <%-include('./partials/header.ejs') %> 
    
      <div class="products-navbar">
        <ul class="navbar-nav">

            <div class="navp">
                <li id='list-hyd-button' class="nav-item">
                    <a class="nav-link" href="/saloonhyd">Hyderabad</a>
                </li>
            </div>
            <div class="navp">
                <li id='list-bgr-button' class="nav-item">
                    <a class="nav-link" href="saloonban">Banaglore</a>
                </li>
            </div>
            <div class="navp">
                <li id='list-che-button' class="nav-item">
                    <a class="nav-link" href="saloonche">Chennai</a>
                </li>
            </div>
            <div class="navp">
                <li id='list-mum-button' class="nav-item">
                    <a class="nav-link" href="saloonmum">Mumbai</a>
                </li>
            </div>
        </ul>
    </div>
    <%hydsaloons.forEach(hydsaloon=>{%>
        <div class='box'>
            <div class='img-box'>
                <form action="/hservice" method="post">
                    <input type="hidden" name="hydsaloonid" value="<%= hydsaloon._id %>">
                    <input type="hidden" name="hydsaloonname" value="<%= hydsaloon.saloonTitle %>">
                    <button type="submit" id="pic"><img class='images' src="<%=hydsaloon.saloonImage %>"></img></form></button>
            </div>
        <div class='bottom'>
        <p id="p1"><%= hydsaloon.saloonTitle %></p>
        <p id="p2"><%= hydsaloon.saloonDescription %></p>
        <p id="p3">Address:<%= hydsaloon.saloonAddress %></p>
        </div>
        </div>
    <%}) %>
